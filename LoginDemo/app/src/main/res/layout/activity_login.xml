<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/login_tool_bar"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:layout_height="150dp"
        android:background="@drawable/marvel_logo"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_welcome_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="36dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/login_tool_bar"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_sc_vw_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_vw_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardMaxElevation="5dp"
                android:layout_margin="20dp"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginBottom="24dp">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/edtxt_lay_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/txtInpOutLinedTheme"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        android:layout_margin="16dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtxt_user_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter UserName"
                            android:maxLength="16"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ed_lay_model_type"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:hint="Select Model"
                        app:layout_constraintTop_toBottomOf="@id/edtxt_lay_user_name">

                        <AutoCompleteTextView
                            android:id="@+id/ed_model_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:cursorVisible="false"
                            android:focusable="true"
                            android:focusableInTouchMode="false"
                            android:importantForAutofill="no"/>

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_enter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ENTER"
                android:textSize="@dimen/txt_xlarge"
                android:background="@drawable/login2_but_ui"
                android:layout_marginTop="8dp"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="48dp"
                app:layout_constraintTop_toBottomOf="@id/card_vw_login"
                app:layout_constraintBottom_toBottomOf="@id/card_vw_login"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- <com.google.android.material.textview.MaterialTextView
                 android:id="@+id/txt_vw_one"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="Powered By"
                 android:gravity="center"
                 android:textSize="@dimen/txt_xxxlarge"
                 android:layout_marginTop="20dp"
                 app:layout_constraintTop_toBottomOf="@id/btn_enter"/>

             <com.google.android.material.textview.MaterialTextView
                 android:id="@+id/txt_vw_two"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="Nuance Communication"
                 android:gravity="center"
                 android:textSize="@dimen/txt_xxxlarge"
                 android:layout_marginTop="16dp"
                 app:layout_constraintTop_toBottomOf="@id/txt_vw_one"/>-->

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_vw_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Powered By"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="@dimen/txt_xxxlarge"
        android:layout_marginTop="42dp"
        app:layout_constraintBottom_toTopOf="@id/txt_vw_two"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_vw_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Advance Communication"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:textSize="@dimen/txt_xxxlarge"
        app:layout_constraintBottom_toTopOf="@id/circle2"
        android:layout_marginBottom="8dp"/>

    <ImageView
        android:id="@+id/circle1"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/circle_transperant"
        app:layout_constraintBottom_toTopOf="@id/tv_welcome_txt"
        app:layout_constraintEnd_toEndOf="parent"
        android:translationX="100dp"
        android:translationY="80dp"/>

    <ImageView
        android:id="@+id/circle2"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/circle_transperant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:translationX="-90dp"
        android:translationY="-15dp"/>

    <ImageView
        android:id="@+id/circle3"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/circle_transperant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:translationX="-10dp"
        android:translationY="35dp"/>

    <ImageView
        android:id="@+id/circle4"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/circle_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:translationX="40dp"
        android:translationY="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>